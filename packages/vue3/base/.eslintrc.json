{
  "extends": ["../../../.eslintrc.json"],
  "ignorePatterns": ["!**/*", "node_modules/**", "src/shims-vue.d.ts"],
  "overrides": [
    {
      "files": ["*.vue"],
      "extends": ["plugin:@nrwl/nx/typescript", "plugin:vue/vue3-recommended"],
      "env": {
        "node": false,
        "browser": true
      },
      "parser": "vue-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
      },
      "rules": {
        "vue/max-attributes-per-line": "off",
        "vue/html-self-closing": [
          "error",
          {
            "html": {
              "void": "always",
              "normal": "always",
              "component": "always"
            },
            "svg": "always",
            "math": "always"
          }
        ]
      }
    }
  ]
}
